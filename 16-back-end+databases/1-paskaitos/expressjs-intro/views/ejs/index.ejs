        <div id="timer"></div>

        <script> 
            let laikas = 5;

            const timer = setInterval(() => {
                if (laikas > 0) {
                    document.getElementById('timer').innerHTML = `liko ${laikas} sekundziu`
                    --laikas
                } else if (laikas === 0) {
                    document.getElementById('timer').innerHTML = `laikas baigesi`
                    clearInterval(timer)
                }
            }, 1000);
        </script>
