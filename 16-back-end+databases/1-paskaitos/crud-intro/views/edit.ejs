<%- include('./layout/nav.ejs') %>
<div id="receptu-list">
    <h2>Atnaujink <%= receptas.title %> recepta </h2>

        <form action="/edit/<%= receptas._id %>?_method=PUT" method="POST">
            <label for="title">Pavadinimas</label>
            <input type="text" id="title" name="title" value="<%= receptas.title %>"/>
            <br>
            <label for="description">Santrauka</label>
            <input type="text" id="description" name="description" value="<%= receptas.description %>">
            <br>
            <label for="price">kaina</label>
            <input type="number" id="price" name="price" value="<%= receptas.price %>">
            <br>
            <label for="level">lygis</label>
            <input type="number" id="level" name="level" value="<%= receptas.level %>">
            <br>
            <button type="submit">koreguoti recepta</button>
        </form>

</div>
